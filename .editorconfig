# Top-most editor config
root = true

# Unix-style new line with newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,scss,css}]
charset = utf-8
indent_style = space
indent_size = 2

# Matches the exact files either package.json
[{package.json}]
indent_size =  2
indent_style = space
